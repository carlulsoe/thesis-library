{
  "name": "thesis-library",
  "version": "0.1.0",
  "description": "test",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "example": "yarn workspace thesis-library-example",
    "cameraApp": "yarn workspace thesis-library-example-camera-app",
    "canvas": "yarn workspace thesis-library-example-canvas",
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "del-cli lib",
    "prepare": "bob build",
    "release": "release-it",
    "compile_docs": "typedoc --out ./docs/documentation ./src --tsconfig ./tsconfig.json",
    "tiny": "npx tinylicious",
    "fix": "yarn lint --fix"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/carlulsoe/thesis-library.git"
  },
  "author": "Carl Ulsøe Christensen <201906950@post.au.dk> (https://github.com/carlulsoe)",
  "contributors": [
    "Carl Ulsøe Christensen <201906950@post.au.dk> (https://github.com/carlulsoe)",
    "Freja Østerbøg <201809189@post.au.dk> (https://github.com/frej0887)"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/carlulsoe/thesis-library/issues"
  },
  "homepage": "https://github.com/carlulsoe/thesis-library#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@commitlint/config-conventional": "^17.0.2",
    "@evilmartians/lefthook": "^1.6.2",
    "@expo/webpack-config": "^19.0.1",
    "@fluidframework/build-common": "^2.0.0",
    "@fluidframework/devtools": "2.0.0-rc.1.0.1",
    "@react-native/eslint-config": "^0.73.1",
    "@release-it/conventional-changelog": "^5.0.0",
    "@types/jest": "^29.5.5",
    "@types/react": "^18.2.44",
    "@types/react-test-renderer": "^18.0.7",
    "babel-loader": "^8.1.0",
    "babel-plugin-module-resolver": "^5.0.0",
    "commitlint": "^17.0.2",
    "del-cli": "^5.1.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "jest-expo": "50.0.3",
    "lefthook": "^1.6.2",
    "prettier": "^3.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "react-native-builder-bob": "^0.20.0",
    "react-native-web": "~0.19.6",
    "react-test-renderer": "^18.2.0",
    "release-it": "^15.0.0",
    "typedoc": "^0.25.8",
    "typescript": "^5.2.2"
  },
  "resolutions": {
    "@types/react": "^18.2.44"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example",
    "exampleCameraApp",
    "exampleCanvas"
  ],
  "packageManager": "yarn@4.1.1",
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/exampleCameraApp/node_modules",
      "<rootDir>/exampleCanvas/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier",
      "plugin:react-hooks/recommended"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "endOfLine": "auto",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.540.0",
    "@fluidframework/aqueduct": "~1.3.7",
    "@fluidframework/azure-client": "2.0.0-rc.1.0.3",
    "@fluidframework/counter": "^1.3.7",
    "@fluidframework/react": "~0.41.4",
    "@fluidframework/task-manager": "^2.0.0-internal.2.2.0",
    "@fluidframework/test-runtime-utils": "2.0.0-rc.1.0.3",
    "@fluidframework/tinylicious-client": "2.0.0-rc.1.0.3",
    "@react-native-clipboard/clipboard": "~1.14.0",
    "@types/react": "^18.2.0",
    "expo": "^50.0.8",
    "expo-camera": "^14.0.5",
    "expo-status-bar": "~1.11.1",
    "face-api.js": "^0.22.2",
    "fluid-framework": "2.0.0-rc.1.0.3",
    "guid-typescript": "^1.0.9",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.73.4",
    "react-native-get-random-values": "~1.10.0",
    "react-native-popup-menu": "~0.16.1",
    "react-native-svg": "~15.1.0",
    "react-native-web": "~0.19.6",
    "tinylicious": "^3.0.0"
  }
}
